{
  "defaults": {
    "env_kind": "carla",
    "timesteps": 5000000,
    "eval_episodes": 16,
    "seed": 0,
    "checkpoint_freq": 100000,
    "checkpoint_dir": "checkpoints",
    "render": false,
    "render_freq": 5,
    "notes": "GrayRoad PPO (BC-style) using GrayroadExtractor",
    "carla_host": "localhost",
    "carla_port": 2000
  },
  "experiments": [
    {
      "name": "ppo_gray_disc_paper",
      "algo": "ppo",
      "obs_mode": "grayroad",
      "action": "disc",
      "param_grid": {
        "algo_kwargs": [
          {
            "learning_rate": 0.0001,
            "n_steps": 2048,
            "batch_size": 256,
            "clip_range": 0.2,
            "gae_lambda": 0.95,
            "ent_coef": 0.01,
            "target_kl": 0.02,
            "policy_kwargs": {
              "features_extractor_class": "GrayroadExtractor",
              "net_arch": {"pi": [256, 128], "vf": [256, 128]}
            }
          }
        ]
      }
    }
  ]
}
