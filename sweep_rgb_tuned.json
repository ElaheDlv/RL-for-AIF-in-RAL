{
  "defaults": {
    "env_kind": "carla",
    "timesteps": 6000000,
    "eval_episodes": 16,
    "seed": 0,
    "checkpoint_freq": 100000,
    "checkpoint_dir": "checkpoints",
    "render": false,
    "render_freq": 5,
    "notes": "RGB PPO discrete tuning set",
    "carla_host": "localhost",
    "carla_port": 2000
  },
  "experiments": [
    {
      "name": "ppo_rgb_disc_tuned",
      "algo": "ppo",
      "obs_mode": "rgb",
      "action": "disc",
      "param_grid": {
        "algo_kwargs": [
          {
            "learning_rate": 0.0003,
            "n_steps": 2048,
            "batch_size": 256,
            "clip_range": 0.2,
            "gae_lambda": 0.95,
            "ent_coef": 0.01,
            "target_kl": 0.03,
            "policy_kwargs": {
              "features_extractor_class": "ResNetFeatureExtractor",
              "features_extractor_kwargs": {"out_dim": 512, "freeze": true},
              "net_arch": {"pi": [512, 256], "vf": [512, 256]}
            }
          },
          {
            "learning_rate": 0.00018,
            "n_steps": 2048,
            "batch_size": 512,
            "clip_range": 0.18,
            "gae_lambda": 0.97,
            "ent_coef": 0.008,
            "target_kl": 0.025,
            "policy_kwargs": {
              "features_extractor_class": "ResNetFeatureExtractor",
              "features_extractor_kwargs": {"out_dim": 512, "freeze": false},
              "net_arch": {"pi": [640, 320], "vf": [640, 320]}
            }
          },
          {
            "learning_rate": 0.00022,
            "n_steps": 1536,
            "batch_size": 384,
            "clip_range": 0.16,
            "gae_lambda": 0.96,
            "ent_coef": 0.012,
            "target_kl": 0.022,
            "policy_kwargs": {
              "features_extractor_class": "ResNetFeatureExtractor",
              "features_extractor_kwargs": {"out_dim": 640, "freeze": false},
              "net_arch": {"pi": [512, 256], "vf": [512, 256]}
            }
          }
        ]
      }
    }
  ]
}
